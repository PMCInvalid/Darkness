<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:id="@+id/surfaceWalkButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:onClick="surfaceWalk"
        android:text="Surface walk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deepDiveButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="75dp"
        android:onClick="deepDive"
        android:text="Deep dive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surfaceWalkButton" />

    <Button
        android:id="@+id/blackoutButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="75dp"
        android:text="Blackout"
        android:onClick="blackout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deepDiveButton" />

    <Button
        android:id="@+id/toMenuButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="75dp"
        android:onClick="gotoMainMenu"
        android:text="Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blackoutButton" />

</androidx.constraintlayout.widget.ConstraintLayout>